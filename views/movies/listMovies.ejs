<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="/css/style-songs.css">
    <script src="/js/header.js" type="module" defer></script>
</head>
<body>
    <header>
    </header>
    <main>
        <h1>Movie management for <%= user.name %>!</h1>
        <section class="container">
            <h2>List</h2>
            <a href="/movies/movies">Add new movie</a>
            <a href="/protected">Home</a>
            <ul class="movie-list">
                <%if(movies==null){ %>
                      <li class="lista-item">
                        <div>
                            <p><%= message%></p>
                        </div>
                    </li>
                <%}else{%>
                    <% movies.forEach(movie => { %>
                        <li class="lista-item">
                            <div>
                                <p><%= movie.title %></p>
                                <a href="/movies/show/<%= movie.id %>">View Details</a>
                            </div>
                        </li>
                    <% })
                 } %>
            </ul>
        </section>
    </main>
</body>
</html>